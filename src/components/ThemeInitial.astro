<script>
	// first check if the toggle has previously been used in prior session
	let storedTheme = localStorage.getItem("theme")
	if (!!storedTheme) {
		// has value so add it to HTML element
		document.documentElement.classList.add(storedTheme)
	} else {
		let theme: string
		// no prior stored value (i.e. they never used toggle/ toggle removed) so go with browsers setting
		if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
			theme = "theme-dark"
    	} else {
			theme = "theme-light"
		}
		document.documentElement.classList.add(theme)
		localStorage.setItem("theme", theme)
	}
</script>